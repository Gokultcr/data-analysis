from matplotlib.pyplot import show
ax=sns.countplot(data["Status"])
target_temp=data.Status.value_counts()
total = float(len("Status"))
print(target_temp)
#for_showing_the_percentage
for p in ax.patches:
    height = p.get_height()
    ax.text(p.get_x()+p.get_width()/2.,
            height + 3,
            '{:1.2f}'.format(height/total),
            ha="center")

